<%- include('partials/header') %>
<%if( error && error.length ){%>
  <div class="container">
    <div class="alert alert-danger alert-dismissible fade show mt-5" role="alert"  style="width:65%;">
      <%=error%>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  </div>
<%}%>

  <div class="container mt-5">
    <h1  style="color:rgb(201, 184, 161); text-shadow: 1px 1px #FF0000;">Login</h1>

    <div class="row">
      <div class="col-sm-8">
        <div class="card">
          <div class="card-body">

            <!-- Makes POST request to /login route -->
            <form action="/login" method="POST">
              <div class="form-group">
                <label for="text">Username</label>
                <input type="username" class="form-control" name="username">
              </div>
              <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" name="password">
              </div>
              <button type="submit" class="btn btn-dark btn-lg ">Login</button>
            </form>

          </div>
        </div>
        <div style=" text-align: center; background-color: black;">
          <p style="display: inline-block;color: rgb(201, 184, 161);">New to the site?....</p>
          <a href="/register" role="button">Register</a>
        </div>
      </div>


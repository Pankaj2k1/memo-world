<%- include('partials/header') %>
<%if( error && error.length ){%>
  <div class="container">
    <div class="alert alert-danger alert-dismissible fade show mt-4" role="alert"  style="width:65%;">
      <%=error%>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  </div>
<%}%>

  <div class="container">
    <div class="jumbotron memo-form">
      <h3 class="display-3" class="formText"> Save A Memory </h3>
      <p class="head-text col-sm-8">Don't keep your Experiences and Memories to yourself, share them with the World!</p>

      <div class="row">
        <div class="col-sm-8">
          <!-- <div class="card">
            <div class="card-body"> -->
              <form action="/submitmemo" enctype="multipart/form-data" method="POST">

                <div class="form-group">
                  <label for="creator"class="formText"> Creator </label>
                  <input type="text" class="form-control" name="creator">
                </div>
                <div class="form-group">
                  <label for="title" class="formText"> Title </label>
                  <input type="text" class="form-control" name="title">
                </div>
                <div class="form-group">
                  <label for="memory"class="formText"> Experience <small>(max 160 characters long)</small></label>
                  <textarea type="text" class="form-control" name="memory" rows="3"></textarea>
                </div>
                <div class="form-group">
                  <p><i class="fas fa-hand-point-down"></i> Upload an Image?<small> (optional)</small></p>
                  <input type="file" accept="image/*" name="memo-image" capture >
                </div>
                <button type="submit" class="btn btn-dark">Submit</button>
              </form>
            <!-- </div>
          </div> -->
        </div>
      </div>


    </div>
  </div>
  <%- include('partials/footer') %>